<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
      name="album"
      type="com.cn29.aac.repo.itunes.Album" />
  </data>

    <androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:layout_gravity="center"

    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/card_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_image_height"
        android:scaleType="centerCrop"
        app:imageUrl="@{album.artworkUrl100}"
        tools:src="@android:drawable/ic_input_add" />

      <TextView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_title_height"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_alignBottom="@+id/card_image"
        android:text='@{String.format("%s",album.collectionName)}'
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        tools:text="Casa Milla" />

      <TextView
        android:id="@+id/card_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/md_keylines"
        android:layout_marginBottom="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginRight="@dimen/md_keylines"
        android:layout_below="@+id/card_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:text='@{String.format("%s", album.primaryGenreName)}'
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/article_subheading"
        tools:text="In Barcenola" />
      <TextView
        android:id="@+id/card_userId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/md_keylines"
        android:layout_marginBottom="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginRight="@dimen/md_keylines"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_text"
        android:ellipsize="end"
        android:singleLine="true"
        android:text='@{String.format("Track Id : %d", album.artistId)}'
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/article_subheading"
        tools:text="User Id : 10232221" />

        <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_userId"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>